{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstname": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "lastname": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "dateOfBirth": {
      "type": "date"
    },
    "profileImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "book": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::book.book",
      "mappedBy": "author"
    }
  }
}
