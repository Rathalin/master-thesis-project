{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "pages": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author",
      "inversedBy": "book"
    },
    "cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
