{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "startReadingDate": {
      "type": "date"
    },
    "finishReadingDate": {
      "type": "date"
    },
    "rating": {
      "type": "enumeration",
      "enum": [
        "very-bad",
        "bad",
        "neutral",
        "good",
        "very-good"
      ]
    },
    "notes": {
      "type": "richtext",
      "maxLength": 1000
    },
    "usersPermissionsUser": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "book"
    },
    "pages": {
      "type": "integer"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::author.author",
      "mappedBy": "book"
    },
    "currentPage": {
      "type": "integer",
      "min": 0
    }
  }
}
